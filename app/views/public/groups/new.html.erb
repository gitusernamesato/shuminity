<h4>グループ作成</h4>

 <% if @group.errors.any? %>
    <%= @group.errors.count %>件のエラーが発生しました
    <ul>
      <% @group.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  
  <%= form_with model:@group,local:true do |f| %>
  <div class="form-group">
    <%= f.label :"グループ名" %>
    <%= f.text_field :group_name, class: 'form-control group_name' %>
  </div>
  <div class="form-group">
    <%= f.label :"紹介文" %>
    <%= f.text_area :introduction, class: 'form-control group_introduction' %>
  </div>
  <div class="form-group">
    <%= f.label :"グループ画像" %>
    <%= f.file_field :group_image, class: "form-control-file group_image", accept: 'image/*' %>
  </div>
  <div class="form-group">
    <%= f.submit class: 'btn btn-info' %>
  </div>
  <% end %>