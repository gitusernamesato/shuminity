
    <h2>グループ詳細</h2>
    <table class='table'>
      <thead>
       <tr>
        <th>グループ名</th>
        <th>紹介文</th>
        <th>メンバー</th>
        <th></th> 
        <th></th>
       </tr>
      </thead>
      <tbody>
       <tr>
        <td>
          <%= image_tag @group.get_group_image(50,50) %>
          <%= @group.group_name %>
        </td>
        <td><%= @group.introduction %></td>
        <td>
          <% @group.users.each do |member| %>
           <%= member.name %></br>
          <% end %>
        </td>
        <td>
          <% if @group.owner_id == current_user.id %>
           <%= link_to 'Edit', edit_group_path(@group), class: "btn btn-sm btn-success" %>
           <td><%= link_to 'destroy', group_path(@group), method: :delete, class: "btn btn-sm btn-danger" %></td>
          <% elsif @group.users.include?(current_user) %>
           <%= link_to 'Leave this group', group_leave_path(@group), class: "btn btn-sm btn-danger" %>
          <% else %>
           <%= link_to 'Join this group', group_join_path(@group), class: "btn btn-sm btn-success" %>
          <% end %>
        </td>
       </tr>
      </tbody>
    </table>