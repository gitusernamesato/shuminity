<h4>投稿編集</h4>
  <%= form_with model:@post, url: post_path(@post), method: :patch, local:true do |f| %>
    <%= f.label :画像 %>
    <%= f.file_field :image, class: 'form-control-file',accept: "image/*" %>
    <%= f.label :title, "タイトル" %>
    <%= f.text_field :title, class: 'form-control', placeholder: "タイトル" %>
    <%= f.label :body, "紹介" %>
    <%= f.text_area :body, class: 'form-control', placeholder: "紹介" %>
    <%= f.label :tagname, "タグ (,で区切ると複数タグ登録できます)" %>
    <%= f.text_field :tagname,value: @tag_list, class:"form-control", placeholder: "タグ" %>
    <%= f.submit '更新', class:'btn btn-sm btn-success mt-2' %>
  <% end %>
