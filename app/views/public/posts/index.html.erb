<h4>新規投稿</h4>
  <%= form_with model:@post, url: posts_path, method: :post, local:true do |f| %>
    <%= f.label :画像 %>
    <%= f.file_field :image, class: 'form-control-file',accept: "image/*" %>
    <%= f.label :title, "タイトル" %>
    <%= f.text_field :title, class: 'form-control', placeholder: "タイトル" %>
    <%= f.label :body, "紹介" %>
    <%= f.text_field :body, class: 'form-control', placeholder: "紹介" %>
    <%= f.label :tagname, "タグ (,で区切ると複数タグ登録できます)" %>
    <%= f.text_field :tagname, class:"form-control", placeholder: "タグ" %>
    <%= f.submit '投稿', class: 'btn btn-sm btn-success mt-2' %>
  <% end %>

<h4 class="my-3">投稿一覧</h4>
<%= render 'public/shared/list', posts: @posts %>