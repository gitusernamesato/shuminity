<h4>新規投稿</h4>
  <%= form_with model:@post, url: posts_path, method: :post, local:true do |f| %>
    <%= f.label :画像 %>
    <%= f.file_field :image, class: 'form-control-file',accept: "image/*" %>
    <%= f.label :title, "タイトル" %>
    <%= f.text_field :title, class: 'form-control', placeholder: "タイトル" %>
    <%= f.label :body, "紹介" %>
    <%= f.text_field :body, class: 'form-control', placeholder: "紹介" %>
    <%= f.submit '新規登録', class: 'btn btn-sm btn-success' %>
  <% end %>
<h4>投稿一覧</h4>
 <% @posts.each do |post| %>
  <%= link_to post_path(post.id) do %>
    <%= image_tag post.get_image(50,50) %>
    <%= post.title %>
  <% end %>
  <%= post.body %>
  <%= post.created_at.strftime('%Y/%m/%d') %></br>
   <p>コメント：<%= post.comments.count %>／いいね：<%= post.favorites.count %></p>
 <% end %>