<h5>新規会員登録</h5>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>
  <div class="field">
    <%= f.label "ユーザー名" %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name", class:"mb-3" %>
  </div>

  <div class="field">
    <%= f.label "メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"mb-3" %>
  </div>

  <div class="field">
    <%= f.label "パスワード" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %>文字以上)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class:"mb-3" %>
  </div>

  <div class="field">
    <%= f.label "パスワード(確認用)" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"mb-3" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録", class:"mb-3" %>
  </div>
<% end %>

<%= render "public/shared/links" %>
