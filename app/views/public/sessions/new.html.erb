<h5>ログイン</h5>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label "メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"mb-3" %>
  </div>

  <div class="field">
    <%= f.label "パスワード" %><br />
    <%= f.password_field :password, autocomplete: "current-password", class:"mb-3" %>
  </div>
  <div class="actions">
    <%= f.submit "ログイン", class:"mb-3" %>
  </div>
<% end %>
<p class="text-danger"><%= flash[:error] %></p>
<%= render "public/shared/links" %>
