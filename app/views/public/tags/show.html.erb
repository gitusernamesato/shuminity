<h4><i class="fas fa-tag"></i><%= @tag.tagname %>の投稿一覧</h4>
<%= render 'public/shared/list', posts: @posts %>

<h4>タグ一覧</h4>
<% @tags.each do |tag| %>
  <span class="mr-3">
    <i class="fas fa-tag"></i>
    <%= link_to tag_path(tag) do %>
      <%= tag.tagname %><%="(#{tag.posts.count})" %>
    <% end %>
  </span>
<% end %>
