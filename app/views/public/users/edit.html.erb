<h5>会員情報編集</h5>
 <% if @user.errors.any? %>
    <%= @user.errors.count %>件のエラーが発生しました
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
    
  <%= form_with model: @user, url: user_path(@user.id), method: :patch, local: true do |f| %>
    <%= f.label "ユーザー名" %>
    <%= f.text_field :name, autofocus: true,class: "form-control" %>
    <%= f.label "メールアドレス", class:"mt-3" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "form-control"  %>
  <%= f.submit "編集内容を保存", class: 'btn btn-success m-3' %>
  
  <%= link_to "退会する", user_confirm_path(@user.id), class: 'btn btn-danger m-3' %>
  <% end %>